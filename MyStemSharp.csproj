<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- Информация о пакете NuGet -->
    <PackageId>MyStemSharp</PackageId>
    <Version>1.0.0</Version>
    <Authors>paralax034</Authors>
    <Description>MyStem from Yandex for C#</Description>
    <Copyright>© paralax034 2025</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/your-repo/your-library</PackageProjectUrl>
    <RepositoryUrl>https://github.com/your-repo/your-library.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>mystem;nlp;russian;linguistics;ml</PackageTags>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

</Project>